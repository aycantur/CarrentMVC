@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model IEnumerable<CarParUnion>
<h3>Araç ve Motor Türleri</h3>
<div>
    <a class="btn btn-secondary" asp-action="Insert" asp-controller="CarPar">Ekle</a>
    <table class="table table-light table-bordered table-striped">
        <thead>
            <tr>
                <td>Tür</td>
                <td>Açıklama</td>
                <td>İşlem</td>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.TypeName</td>
                    <td>@item.Name</td>
                    <td>
                        <a class="btn btn-link" asp-action="Update" asp-controller="CarPar" asp-route-id=@item.Id>Düzelt</a>
                        <a class="btn btn-link" asp-action="Delete" asp-controller="CarPar" asp-route-id=@item.Id onclick="return confirm ('Araç türünü silmeye emin misiniz?')">Sil</a>
                    </td>
                </tr>
            }
        </tbody>

    </table>
</div>