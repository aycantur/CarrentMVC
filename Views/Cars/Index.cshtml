@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model IEnumerable<CarsList>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h3 >Tanımlı Araçlar</h3>
<div>
    <a class="btn btn-secondary" asp-action="Insert" asp-controller="Cars">Araç Ekle</a>
    <table class="table table-light table-bordered table-striped">
        <thead>
            <tr>
                <td>Araç Adı</td>
                <td>Araç Türü</td>
                <td>Motor Türü</td>
                <td>Motor Hacmi</td>
                <td>İşlem</td>
            </tr>
        </thead>
        <tbody>
            @if (Model is not null)
            {
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Name</td>
                        <td>@item.CarTypeName</td>
                        <td>@item.EngineTypeName</td>
                        <td>@item.EngineVolume</td>
                        <td>
                            <a class="btn btn-link" asp-action="Update" asp-controller="Cars" asp-route-id=@item.Id>Güncelle</a>
                            <a class="btn btn-sm btn-light" asp-action="Delete" asp-controller="Cars" asp-route-id=@item.Id onclick="return confirm ('Aracı silmeyi emin misiniz?');">Sil</a>
                        </td>
                    </tr>
                }
            }

        </tbody>

    </table>
</div>