@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model CarsList
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3>Araç Oluştur</h3>
<form asp-controller="Cars" asp-action="InsertContent" method="post">
    <div class="row">
        <div class="col-sm-6">
            <label style="font-weight:bold" asp-for="@Model.Name">Araç Adı</label>
            <input asp-for="@Model.Name" class="form-control" required />
            <label style="font-weight:bold" asp-for="@Model.CarType">Araç Türü</label>
            <select asp-for="@Model.CarType" class="form-control">
                    @foreach (var item in Model.carParsType)
                    {
                    <option value=@item.Id>@item.Name</option>
                    }
            </select>
            <label style="font-weight:bold" asp-for="@Model.EngineType">Motor Türü</label>
            <select asp-for="@Model.EngineType" class="form-control">
                    @foreach (var item in Model.carParsEngineType)
                    {
                    <option value=@item.Id>@item.Name</option>
                    }
            </select>
            <label style="font-weight:bold" asp-for="@Model.EngineVolume">Motor Hacmi</label>
            <input asp-for="@Model.EngineVolume" class="form-control" required />
            <label style="font-weight:bold" asp-for="@Model.Price">Günlük Ücreti</label>
            <input asp-for="@Model.Price" class="form-control" required />
            <br />
            <button type="submit" class="btn btn-secondary">Ekle</button>
        </div>

        <div  class="col-sm-6">
            <img style="height: 500px;" src="~/nolan-standifer-hlHbPCp05jo-unsplash.jpg" alt="Araç Kiralama">

        </div>
    </div>



</form>

